<%= render "shared/all_pages_nav" %>
<h1 class="dashboard-title">Welcome to Your Dashboard!</h1>

<div class="game-history">
  <div class="stat-card">
    <h3 class="stat-number"><%= @dashboard_details["total_games_played"] %></h3>
    <p class="stat-label">Total Games Played</p>
  </div>
  <div class="stat-card">
    <h3 class="stat-number"><%= @dashboard_details["last_played_on"] %></h3>
    <p class="stat-label">Last Played</p>
  </div>
  <div class="stat-card">
    <h3 class="stat-number"><%= @dashboard_details["streak"] %></h3>
    <p class="stat-label">Streak</p>
  </div>
</div>

<h2 class="recent-games-title">Your Recent Games</h2>
<div class="game-list">
  <% @dashboard_details.each do |game_id, details| %>
    <% if game_id.is_a?(Integer) %>
      <div class="game-card">
        <h4 class="game-title"><%= details["name"] %></h4>
        <p class="last-played">Last Played on: <%= details["last_played_on"] %></p>
        <p class="status">Score: <%= details["score"] %></p>
        <% if details["last_played_on"] != "Never played" %>
          <%= button_to 'More', game_history_path(game_id: game_id), method: :get, class: 'btn more-btn' %>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
