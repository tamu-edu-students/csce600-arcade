<h2 class='sb-title'>Spelling Bee</h2>
<div style="--primary-clr: <%= @aesthetic.colors[0]  %>; --font-clr: <%= @aesthetic.colors[3] %>; --font: <%= @aesthetic.font %>; 
            --secondary-clr: <%= @aesthetic.colors[1] %>; --tertiary-clr: <%= @aesthetic.colors[2] %>;">
    <div class="sb-game">
            <div class='sb-left'>
                <div class='hex-container'>
                    <div class="hex-row">
                        <div class="hex">
                            <span class="hex-content">D</span>
                        </div>
                        <div class="hex">
                            <span class="hex-content">E</span>
                        </div>
                    </div>
                    <div class="hex-row">
                        <div class="hex">
                            <span class="hex-content">M</span>
                        </div>
                        <div class="hex hex-center">
                            <span class="hex-content">O</span>
                        </div>
                        <div class="hex">
                            <span class="hex-content">D</span>
                        </div>
                    </div>
                    <div class="hex-row">
                        <div class="hex">
                            <span class="hex-content">E</span>
                        </div>
                        <div class="hex">
                            <span class="hex-content">M</span>
                        </div>
                    </div>
                </div>
                <div class='sb-input'>
                    <input type="text" name="sbword" placeholder="Enter your word here..." required minlength="4" maxlength="11" autocomplete="off" pattern="[A-Za-z]+" title="Only letters are allowed." disabled />
                    <button class="btn btn-login btn-admin" type="button">Submit</button>
                </div>
            </div>
            <div class='sb-right', style="padding: 5px;">
                <div class='sb-score'>
                    <h3 style="font-family: var(--font);">Score: DEMO </h3>
                </div>
                <p>Found words:</p>
                <div class='sb-words'>
                    DEMO DEMO DEMO DEMO DEMO DEMO
                </div>
            </div>
    </div>
</div>
 